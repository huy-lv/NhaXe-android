<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:background="@drawable/funbus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="CHẤT LƯỢNG TẠO THÀNH CÔNG"
                android:textColor="#f90c0c"
                android:textStyle="bold" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mt"
                android:gravity="center"
                android:padding="20dp"
                android:text="  Giới Thiệu"
                android:textColor="#f90c0c"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGThieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/eye"
                android:gravity="center"
                android:text="  Tầm Nhìn"
                android:textColor="#f90c0c"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTamNHin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/muctieu"
                android:gravity="center"
                android:text="  Mục Tiêu"
                android:textColor="#f90c0c"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMucTieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/khachhang"
                android:padding="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3000 Lượt Khách Mỗi Ngày"
                android:textColor="#f90c0c"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/hic"
                android:padding="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hơn 100 tuyến xe"
                android:textColor="#f90c0c"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/hic1"
                android:padding="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hơn 10 chi nhánh"
                android:textColor="#f90c0c"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>