<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebfaf8"
    android:padding="5dp"
    android:paddingRight="5dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="61dp"
        android:layout_height="match_parent"
        android:src="@drawable/xeicon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="0.40">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDiemDi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diem Di"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:background="@drawable/muiten"
                android:textSize="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDiemDen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diem Den"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thuộc Tuyến:" />


            <TextView
                android:id="@+id/tvTENLOTRINH"
                android:paddingLeft="10dp"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Trạm Dừng:" />


            <TextView
                android:id="@+id/tvSOTRAMDUNG"
                android:paddingLeft="10dp"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTongKm"
                android:paddingRight="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quãng Đường"
                android:textSize="14sp" />
            <TextView

                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/muiten1"
                android:layout_width="15dp"
                android:layout_height="8dp" />
            <TextView
                android:id="@+id/tvThoiGian"
                android:paddingLeft="10dp"
                android:text="ThoiGian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#f51717"

                    android:id="@+id/tvGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200000"
                    android:textSize="16sp" />

                <TextView
                    android:paddingLeft="5dp"
                    android:text="đồng/vé"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <Button
                android:id="@+id/btnMuaVE"
                android:textColor="#e22020"

                android:background="@drawable/gbbt"
                android:layout_weight="0.10"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="Đặt Vé"
                android:layout_width="50dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>