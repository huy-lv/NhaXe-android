<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.40"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/hinhquytrinh" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chon diem di"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/timve_diemdi_sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chon diem den"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <Spinner
                android:id="@+id/timve_diemden_sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chon ngay di"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/timve_chonngay_sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chon gio di"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/timve_chongio_sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/timve_tieptuc_bt"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiep tuc"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


